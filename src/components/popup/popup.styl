.popup
    z-index 10
    position fixed
    top 50%
    left 50%
    max-width 540px
    min-width 320px
    width 100%
    padding 68px 40px 40px
    transform translate(-50%, -50%)
    background-color #14110f
    box-sizing border-box
    
    &__wrapper
        margin-top 38px
    
    &__title
        font-size 20px
        line-height 57px
        letter-spacing 4.2px
        text-transform uppercase
        color #d9c5b3
    
    &__close
        position absolute
        right 20px
        top 20px
        width 28px
        height 28px
        fill #d9c5b3
        cursor pointer
        
    .input-box
        
        &:not(:last-of-type)
            margin-bottom 63px
            
    &__button
        display flex
        flex-direction column
        margin-top 35px
    
        .checkbox
            margin-bottom 42px
        
        .button
            margin-left auto
            margin-right auto
            
    &_close
        display none
        z-index -1