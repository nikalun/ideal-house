.soon
    position relative
    height 100vh
    width 100%
    overflow hidden
    
    @media (max-width 768px)
        height auto
        overflow visible
    
    &__image
        position absolute
        width 100%
        height 100%
        object-fit cover
        
        @media (max-width 768px)
            position static
            width 100%
            height auto
            object-fit none
    
        @media (max-width 320px)
            min-height 171px
    
    &__wrapper
        position absolute
        left 50%
        top 50%
        width 100%
        transform translate(-50%, -50%)
        
        @media (max-width 768px)
            left 0
            top 0
            width 100%
            height 100%
            transform translate(0, 0)
            
    &__data
        text-align center
        
        @media (max-width 1400px)
            margin-top -8px
        
        @media (max-width 768px)
            position absolute
            top 100%
            width 100%
            padding-bottom 60px
            text-align center
            background-color #fff
    
        @media (max-width 540px)
            padding-bottom 30px
    
        @media (max-width 320px)
            margin-top 21px
        
    &__logo-box
        z-index 1
        position relative
        height 347px
        width 347px
        margin-left auto
        margin-right auto
        
        @media (max-width 1400px)
            width 277px
            height 277px
    
        @media (max-width 1280px)
            width 222px
            height 222px
            
        @media (max-width 768px)
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
        
        @media (max-width 540px)
            width 171px
            height 171px
        
    &__title
        font-size 52px
        line-height 95px
        font-weight 500
        text-transform uppercase
        letter-spacing 8px
        color #fff
        
        @media (max-width 1400px)
            font-size 36px
            letter-spacing 5.5px
    
        @media (max-width 1280px)
            margin-top -10px
    
        @media (max-width 768px)
            margin-top 23px
            font-size 36px
            color #14110f
    
        @media (max-width 540px)
            margin-top 0
            font-size 32px
            letter-spacing 5px
    
        @media (max-width 320px)
            line-height 40px
            
        span
            font-weight 300
            color #d9c5b3
    
            @media (max-width 768px)
                color #7e7f83
            
    &__address
        margin-top -15px
        font-size 14px
        line-height 32px
        font-weight 600
        text-align center
        text-transform uppercase
        letter-spacing 2.8px
        color #d9c5b3
    
        @media (max-width 1400px)
            margin-top -21px
        
        @media (max-width 1280px)
            margin-top -22px
        
        @media (max-width 768px)
            color #34312d
    
        @media (max-width 320px)
            margin-top 0
            
    &__gradient
        z-index -1
        position absolute
        left 50%
        top 50%
        width 100%
        transform translateX(-50%)
        
        @media (max-width 1400px)
            width 782px
    
        @media (max-width 1280px)
            width 1000px
            
        @media (max-width 768px)
            display none
    
    &__logo
        z-index 2
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
    
        @media (max-width 1400px)
            width 190px
    
        @media (max-width 1280px)
            width 155px
    
        @media (max-width 540px)
            width 119px
        
    &__circle-one,
    &__circle-two
        position absolute
        left 50%
        top 50%
        border 1px solid #d9c5b3
        border-radius 50%
        transform translate(-50%, -50%)
        
    &__circle-one
        z-index 1
        width 278px
        height 278px
        animation-name opacity-one
        animation-duration 1.5s
        animation-timing-function ease-out
        animation-iteration-count infinite
        animation-direction alternate
        background-color #14110f
    
        @media (max-width 1400px)
            width 224px
            height 224px
    
        @media (max-width 1280px)
            width 178px
            height 178px
    
        @media (max-width 540px)
            width 137px
            height 137px
        
    &__circle-two
        z-index 0
        width 100%
        height 100%
        opacity .2
        animation-name opacity-two
        animation-duration 1.5s
        animation-timing-function ease-out
        animation-iteration-count infinite
        animation-direction alternate
        background-color #14110f
        
    @keyframes opacity-one {
        from { opacity: .9}
        to {opacity: .47}
    }
    
    @keyframes opacity-two {
        from { opacity: .5}
        to {opacity: .2}
    }