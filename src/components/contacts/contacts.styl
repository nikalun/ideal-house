.contacts
    display flex
    padding-left 210px
    padding-right 210px
    padding-top 150px
    padding-bottom 160px
    
    @media (max-width 1400px)
        padding-left 150px
        padding-right 150px
        padding-top 85px
    
    @media (max-width 1280px)
        flex-wrap wrap
        padding-left 130px
        padding-right 130px
        padding-top 80px
    
    @media (max-width 1024px)
        padding-left 80px
        padding-right 80px
    
    @media (max-width 768px)
        background-image none
        padding-left 60px
        padding-right 60px
        padding-top 55px
        padding-bottom 90px
    
    @media (max-width 540px)
        padding-top 35px
        padding-bottom 75px
    
    @media (max-width 320px)
        padding-top 50px
        padding-left 15px
        padding-right 15px
        
    &__data
        width 600px
        flex-shrink 0
    
        @media (max-width 1400px)
            width 550px
    
        @media (max-width 1280px)
            width 100%
        
    &__form
        margin-top 55px
    
        @media (max-width 1400px)
            margin-top 17px
    
        @media (max-width 1280px)
            margin-top 28px
    
        @media (max-width 1024px)
            margin-top 15px
    
        @media (max-width 540px)
            margin-top 38px
            
    &__form-box
        flex-grow 1
    
        @media (max-width 1280px)
            margin-top 66px
    
        @media (max-width 1024px)
            margin-top 35
    
        @media (max-width 768px)
            margin-top 41px
    
        @media (max-width 540px)
            margin-top 35px
        
    &__title
        font-weight 600
        font-size 24px
        line-height 57px
        text-transform uppercase
        letter-spacing 4.8px
        color #d9c5b3
    
        @media (max-width 1400px)
            font-size 20px
            
        @media (max-width 1280px)
            font-size 18px
            letter-spacing 3.5px
    
        @media (max-width 1024px)
            letter-spacing 5.5px
    
        @media (max-width 768px)
            font-size 20px
            letter-spacing 4.2px
    
        @media (max-width 320px)
            line-height 24px
    
    &__wrapper
        display flex
        margin-right -15px
        margin-left  -15px
    
        @media (max-width 1400px)
            flex-wrap wrap
        
        .input-box
            width 33.333%
            padding-left 15px
            padding-right 15px
    
            @media (max-width 1400px)
                width 50%
            
                &:first-of-type
                    width 100%
                    margin-bottom 61px
                
            @media (max-width 1280px)
                width 30%
                
                &:first-of-type
                    width 40%
                    margin-bottom 0
                
            @media (max-width 1024px)
                width 50%
                
                &:first-of-type
                    width 100%
                    margin-bottom 63px
            
            @media (max-width 540px)
                width 100%
                
                &:not(:last-of-type)
                    margin-bottom 63px
                
            &__label
                left 15px
             
    &__col
    
        &-left
            width 165px
    
            @media (max-width 1400px)
                width 155px
    
            @media (max-width 1280px)
                width auto
        
    &__button
        display flex
        align-items flex-end
        justify-content space-between
        margin-top 35px
    
        @media (max-width 1400px)
            margin-top 31px
            align-items center
    
        @media (max-width 1280px)
            margin-top 41px
    
        @media (max-width 1024px)
            margin-top 29px
    
        @media (max-width 768px)
            margin-top 27px
    
        @media (max-width 540px)
            flex-wrap wrap
            margin-top 35px
            
        @media (max-width 320px)
            margin-top 26px
            
        .button
            padding-left 35px
            padding-right 35px
    
            @media (max-width 768px)
                padding-left 45px
                padding-right 45px
                
            @media (max-width 540px)
                padding-right 44px
                padding-left 44px
                margin-left auto
                margin-right auto
        
        .checkbox
    
            @media (max-width 1400px)
                width 210px
    
                @media (max-width 1280px)
                    width auto
    
                @media (max-width 768px)
                    width 210px
    
                @media (max-width 540px)
                    width 100%
                    margin-bottom 42px
    
                @media (max-width 320px)
                    margin-bottom 35px
                
            &__label
                line-height 14px
    
                @media (max-width 1400px)
                    font-size 12px
                    line-height 16px
                    
                @media (max-width 1280px)
                    font-size 14px
    
                @media (max-width 768px)
                    font-size 12px
        
    &__table
        table-layout fixed
        margin-top 24px
    
        @media (max-width 1400px)
            margin-top 13px
    
        @media (max-width 1280px)
            margin-top 0
            
        @media (max-width 320px)
            margin-top 12px
        
        tbody
    
            @media (max-width 1280px)
                display flex
                flex-wrap wrap
                
                tr
                    width 50%
                    
                    &:first-of-type
                        padding-right 30px
                
                    td:first-of-type
                        width 154px
            
            @media (max-width 768px)
                display table-row
    
            @media (max-width 540px)
        
                tr
                    td:first-of-type
                        width 218px
                
            @media (max-width 320px)
                tr
                    td:first-of-type
                        width 139px
                
        tr
        
            td
                padding-bottom 21px
                font-size 13px
                line-height 20px
            
                &:first-of-type
                    text-transform uppercase
                    color #a09f9f
                
                &:last-of-type
                    font-size 15px
                    color #f3f3f4