.advantages
    display flex
    padding-left 50px
    padding-right 50px
    background-color #f5f5f6
    
    @media (max-width 1400px)
        flex-wrap wrap
    
    @media (max-width 768px)
        padding-top 12px
        padding-left 0
        padding-right 0
    
    &__card
        position relative
        padding 133px 59px
        
        &:last-of-type
            
            &::before
                content normal
        
        @media (max-width 1400px)
            width 50%
            padding 87px 51px 0
            
            
            &:nth-of-type(2),
            &:nth-of-type(4)
                
                &::before
                    content normal
            
                @media (max-width 1280px)
                    padding-right 50px
    
                @media (max-width 1024px)
                    padding-right 30px
            
            &:nth-of-type(3)
                
                &::before
                    top auto
                    bottom 0
            
            &:nth-of-type(3),
            &:nth-of-type(4)
                padding-bottom 100px
            
        @media (max-width 1280px)
            padding-top 108px
            padding-left 46px
            padding-right 100px
    
        @media (max-width 1024px)
            padding-left 30px
            padding-right 80px
            
        @media (max-width 768px)
            width 100%
            padding 46px 90px 55px
    
            &:nth-of-type(3),
            &:nth-of-type(4)
                padding-bottom 55px
            
            &:nth-of-type(2)
        
                &::before
                    content ''
            
        @media (max-width 540px)
            padding 45px 60px
    
        @media (max-width 320px)
            padding 40px 15px
            
        &::before
            content ''
            position absolute
            right 0
            top 0
            display block
            width 4px
            height 159px
            background-color #fff
    
            @media (max-width 768px)
                right auto
                left 0
                top auto
                bottom 0
                width 232px
                height 4px