.dealer
    padding-top 90px
    padding-bottom 90px
    padding-left 360px
    padding-right 330px
    
    @media (max-width 1400px)
        padding-top 107px
        padding-left 151px
        padding-right 225px
    
    @media (max-width 1280px)
        padding-top 85px
        padding-bottom 85px
        padding-right 140px
    
    @media (max-width 1024px)
        padding-top 89px
        padding-bottom 75px
        padding-left 80px
        padding-right 80px
        
    @media (max-width 768px)
        margin-top 186px
        padding-top 80px
        padding-bottom 80px
        background-image none
        
    @media (max-width 540px)
        margin-top 135px
        padding-top 40px
        padding-bottom 65px
        padding-left 60px
        padding-right 60px
    
    @media (max-width 320px)
        margin-top 163px
        padding-left 15px
        padding-right 15px
        
    &__text
        position relative
        padding-left 100px
        font-size 28px
        line-height 52px
        font-weight 600
        text-transform uppercase
        letter-spacing 4.3px
        color #f3f3f4
        
        @media (max-width 1400px)
            padding-left 80px
            font-size 23px
            line-height 47px
    
        @media (max-width 1280px)
            padding-left 69px
            font-size 20px
            line-height 40px
            letter-spacing 3px
    
        @media (max-width 1024px)
            padding-left 56px
            
        @media (max-width 768px)
            font-size 18px
            line-height 36px
    
        @media (max-width 540px)
            padding-left 0
            padding-top 35px
            font-size 16px
            line-height 28px
            letter-spacing 1.5px
            
        &::before
            content ''
            position absolute
            left 0
            top 0
            display block
            width 4px
            height 100%
            background-color #d9c5b3
    
            @media (max-width 540px)
                width 30px
                height 4px